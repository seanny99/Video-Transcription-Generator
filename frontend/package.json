{
    "name": "video-transcription-generator",
    "version": "1.0.0",
    "description": "Video/Audio transcription app with YouTube support",
    "author": "seanny99",
    "repository": {
        "type": "git",
        "url": "https://github.com/seanny99/Video-Transcription-Generator.git"
    },
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "tsc -p tsconfig.main.json --watch",
        "dev:renderer": "vite",
        "build": "npm run build:main && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json",
        "build:renderer": "vite build",
        "start": "electron .",
        "electron": "npm run build:main && electron .",
        "package": "electron-builder"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "framer-motion": "^12.24.0",
        "lucide-react": "^0.562.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.23",
        "concurrently": "^8.2.2",
        "electron": "^28.1.3",
        "electron-builder": "^24.9.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.19",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    },
    "build": {
        "appId": "com.transcription.generator",
        "productName": "Video Transcription Generator",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.icns"
        },
        "extraResources": [
            {
                "from": "../backend/dist",
                "to": "backend",
                "filter": [
                    "backend.exe"
                ]
            }
        ]
    }
}